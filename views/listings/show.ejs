<%layout("/layouts/boillerplate")%>
<div class="row">
    <div class="col-8 offset-3 mt-3">
       <h3>Listing Details</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img
        src="<%=listing.image%>"
        class="card-img-top show-img"
        alt="listing_image"
       />

       <div class="card-body">
        <p class="card-text">
         <b><%=listing.title%> </b> <br>
          <%=listing.description%> <br>
         &#8377;   <%=listing.price%> <br>
         <%=listing.location%><br>
         <%=listing.country%> <br>
         </p>
       </div>

    </div>
    <br/>
     <div class="btns">
       <a href="/listing/<%=listing.id%>/edit" 
        class="btn btn-dark col-2 offset-3 btn-edit">
        Edit</a>
        <form method="post" action="/listing/<%=listing.id%>?_method=DELETE">
         <button class="btn btn-dark offset-5  btn-del">Delete</button>
       </form>
    </div>
</div>
    

    
